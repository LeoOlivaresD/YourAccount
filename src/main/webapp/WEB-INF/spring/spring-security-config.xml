<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/security
       https://www.springframework.org/schema/security/spring-security.xsd">

    <security:http auto-config="true">
        <security:intercept-url pattern="/" access="permitAll()"/>
        <security:intercept-url pattern="/interface/list" access="hasAnyAuthority ('usuario')"/>
        <security:intercept-url pattern="/interface/create" access="hasAnyAuthority ('usuario')"/>
        <security:form-login login-page="/login" default-target-url="/interface/listAccounts/{userId}" authentication-failure-url="/error"
                             username-parameter="name" password-parameter="password"/>
        <security:csrf disabled="true"/>
        <security:logout logout-success-url="/"/>
    </security:http>


    <security:authentication-manager>
        <security:authentication-provider>
            <security:password-encoder ref="noOpPasswordEncoder"/>
            <security:jdbc-user-service data-source-ref="ds"
                                        users-by-username-query="SELECT name AS username, password, 1 AS enabled FROM user WHERE name = ?"
                                        authorities-by-username-query="SELECT name AS username, rol AS authority FROM user WHERE name = ?"/>
        </security:authentication-provider>
    </security:authentication-manager>
    <bean id="noOpPasswordEncoder"
          class="org.springframework.security.crypto.password.NoOpPasswordEncoder"/>
</beans>